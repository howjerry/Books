# 深度研究代理人實戰 - 第 6 章：長短時記憶管理
# 複製此檔案為 .env 並填入你的 API Key

# ===========================================
# OpenAI API 設定（必要）
# ===========================================
# 從 https://platform.openai.com/api-keys 獲取
OPENAI_API_KEY=your-openai-api-key-here

# ===========================================
# 模型配置
# ===========================================

# 預設 LLM 模型
DEFAULT_MODEL=gpt-4o-mini

# 嵌入模型
EMBEDDING_MODEL=text-embedding-3-small

# ===========================================
# 記憶容量配置
# ===========================================

# 工作記憶容量（tokens）
WORKING_MEMORY_TOKENS=8000

# 情節記憶容量（tokens）
EPISODIC_MEMORY_TOKENS=32000

# 工作記憶保護區佔比
WORKING_MEMORY_PROTECTED_RATIO=0.2

# ===========================================
# 壓縮配置
# ===========================================

# 觸發壓縮的使用率閾值
COMPRESSION_THRESHOLD=0.8

# 滑動視窗大小（不壓縮的最近情節數）
WINDOW_SIZE=10

# 目標壓縮後使用率
COMPRESSION_TARGET=0.6

# ===========================================
# 語義記憶配置
# ===========================================

# 嵌入維度（根據模型自動設定）
# text-embedding-3-small: 1536
# text-embedding-3-large: 3072
EMBEDDING_DIM=1536

# 相似度閾值（用於去重）
SIMILARITY_THRESHOLD=0.85

# 最小搜尋相似度
MIN_SEARCH_SIMILARITY=0.5

# ===========================================
# 快取配置
# ===========================================

# 啟用嵌入快取
ENABLE_EMBEDDING_CACHE=true

# 快取存儲路徑
CACHE_PATH=./cache

# 最大快取大小（MB）
MAX_CACHE_SIZE=100

# ===========================================
# 日誌配置
# ===========================================

# 日誌級別
LOG_LEVEL=INFO

# 是否顯示詳細輸出
VERBOSE=true

# ===========================================
# 向量資料庫配置（可選）
# ===========================================

# 向量資料庫類型（memory, chromadb, qdrant, pinecone）
VECTOR_DB_TYPE=memory

# ChromaDB 路徑
# CHROMADB_PATH=./chromadb

# Qdrant 連接
# QDRANT_URL=http://localhost:6333

# Pinecone 配置
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=us-west1-gcp
